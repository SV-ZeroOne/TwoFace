<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="Ironman" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

        <class>za.co.entelect.bootcamp.twoface.squareeyes.domain.creator.Creator</class>
        <class>za.co.entelect.bootcamp.twoface.squareeyes.domain.creator.ComicCreator</class>
        <class>za.co.entelect.bootcamp.twoface.squareeyes.domain.creator.ComicCreatorsId</class>
        <class>za.co.entelect.bootcamp.twoface.squareeyes.domain.issue.Issue</class>
        <class>za.co.entelect.bootcamp.twoface.squareeyes.domain.supplier.Order</class>
        <class>za.co.entelect.bootcamp.twoface.squareeyes.domain.stock.Stock</class>
        <class>za.co.entelect.bootcamp.twoface.squareeyes.domain.supplier.Supplier</class>
        <class>za.co.entelect.bootcamp.twoface.squareeyes.domain.supplier.SupplierPayment</class>
        <class>za.co.entelect.bootcamp.twoface.squareeyes.domain.supplier.SupplierQuote</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.microsoft.sqlserver.jdbc.SQLServerDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:sqlserver://localhost:1433;databaseName=SquareEyes"/>
            <property name="javax.persistence.jdbc.user" value="comic"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="javax.persistence.jdbc.dialect" value="org.hibernate.dialect.SQLServerDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
